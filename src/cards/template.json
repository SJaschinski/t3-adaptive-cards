{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.6",
  "body": [
    {
      "type": "TextBlock",
      "text": "Prüfprotokoll",
      "wrap": true,
      "style": "heading",
      "level": "h1"
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Betriebsanleitung",
          "wrap": true,
          "style": "heading",
          "level": "h2",
          "separator": true
        },
        {
          "type": "Input.ChoiceSet",
          "id": "betriebsanleitung",
          "choices": [
            {
              "title": "Ja",
              "value": "Ja"
            },
            {
              "title": "Nein",
              "value": "Nein"
            },
            {
              "title": "n.v.h.",
              "value": "nvh"
            }
          ],
          "descriptions": [
            "gut leserlich",
            "nicht leserlich",
            "nicht vorhanden"
          ],
          "style": "expanded",
          "label": "Gut leserlich vorhanden"
        }
      ]
    },
    {
      "type": "Container",
      "items": [
        {
          "type": "TextBlock",
          "text": "Holme und Sprossen bzw. Wangen und Stufen",
          "wrap": true,
          "style": "heading",
          "level": "h2",
          "separator": true
        },
        {
          "type": "Input.ChoiceSet",
          "id": "beschaedigungen",
          "choices": [
            {
              "title": "Ja",
              "value": "Ja"
            },
            {
              "title": "Nein",
              "value": "Nein"
            },
            {
              "title": "n.v.h.",
              "value": "nvh"
            }
          ],
          "descriptions": [
            "Beschädigungen vorhanden",
            "keine Beschädigungen",
            "nicht vorhanden"
          ],
          "style": "expanded",
          "label": "Beschädigungen, Risse, Brüche, Abnutzungen"
        },
        {
          "type": "Input.ChoiceSet",
          "id": "einbeulungen",
          "choices": [
            {
              "title": "Ja",
              "value": "Ja"
            },
            {
              "title": "Nein",
              "value": "Nein"
            },
            {
              "title": "n.v.h.",
              "value": "nvh"
            }
          ],
          "descriptions": [
            "Einbeulungen vorhanden",
            "keine Einbeulungen",
            "nicht vorhanden"
          ],
          "style": "expanded",
          "label": "Einbeulungen, Knicke"
        }
      ]
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Prüfprotokoll speichern",
      "tooltip": "Prüfprotokoll der Leiter speichern"
    }
  ]
}
